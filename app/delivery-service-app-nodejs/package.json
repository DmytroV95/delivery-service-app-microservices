{
  "name": "delivery-service-app-nodejs",
  "version": "1.0.0",
  "description": "NodeJS service which provides a REST API for managing CargoMovement",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "test": "jest",
    "dev": "nodemon --exec ts-node ./src/index.ts",
    "start": "npm run build && node ./dist/index.js",
    "coverage": "nyc npm run test"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts"
    ]
  },
  "keywords": [],
  "author": "Dmyto Varukha",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.2.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "axios": "^1.6.8",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "http-status": "^1.7.4",
    "log4js": "^6.9.1",
    "mongodb": "^6.6.2",
    "mongoose": "^8.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  }
}
